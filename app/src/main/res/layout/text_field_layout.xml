<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.textfield.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/outlinedTextFieldEvent"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:hint="Text field Name"
    app:boxCornerRadiusBottomEnd="@dimen/card_radius"
    app:boxCornerRadiusBottomStart="@dimen/card_radius"
    app:boxCornerRadiusTopEnd="@dimen/card_radius"
    app:boxCornerRadiusTopStart="@dimen/card_radius"
    app:boxStrokeColor="@color/purple_700"
    app:hintTextColor="@color/white"
    android:layout_marginBottom="@dimen/margin_8"
    android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_text_create_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</com.google.android.material.textfield.TextInputLayout>